{{!< default}}

<div class="container">

      <div class="fb-share-button" data-href="https://hacklog.mu{{url}}" data-layout="button_count"></div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{#post}}
      <article role="main" class="blog-post">
          {{content}}
      </article>
      
      <iframe src="//www.facebook.com/plugins/follow?href=https%3A%2F%2Fwww.facebook.com%2Fish.sookun&amp;layout=standard&amp;show_faces=true&amp;colorscheme=light&amp;width=450&amp;height=80" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:450px; height:80px;" allowTransparency="true"></iframe>

      <ul class="pager blog-pager">
        {{#prev_post}}
        <li class="previous">
          <a href="{{url}}" data-toggle="tooltip" data-placement="top" title="{{title}}">&larr; Previous Post</a>
        </li>
        {{/prev_post}}
        {{#next_post}}
        <li class="next">
          <a href="{{url}}" data-toggle="tooltip" data-placement="top" title="{{title}}">Next Post &rarr;</a>
        </li>
        {{/next_post}}
      </ul>
      {{/post}}
      {{> facebook-comment}}
      <div class="fb-comments" data-href="https://hacklog.mu{{url}}" data-numposts="10" width="100%"></div>
      

    </div>
  </div>
</div>
